<% layout("/layouts/boilerplate.ejs") %>

<div class="container my-4">
  <h4 class="text-center mb-4"><%= category.name %> Services</h4>

  <div class="row">
    <% services.forEach(service => { %>
    <div class="col-md-12 mb-4">
      <div class="card shadow-sm p-3">
        <div class="row g-0 align-items-center">
          <!-- Service Image -->
          <div class="col-md-2 text-center">
            <img
              src="<%= service.img %>"
              class="img-fluid rounded"
              alt="<%= service.name %> Image"
              style="max-height: 100px"
            />
          </div>

          <!-- Service Info -->
          <div class="col-md-7">
            <div class="card-body">
              <h5 class="card-title mb-1"><%= service.name %></h5>
              <p class="text-muted mb-1">
                <i class="bi bi-star-fill"></i> <%= service.ratings %> (<%=
                service.reviews %> reviews)
              </p>
              <p class="text-muted small mb-1">
                ₹<%= service.cost %> • <%= service.duration %> mins
              </p>
              <a href="#" class="text-decoration-underline">View details</a>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="col-md-3 text-end">
            <form action="/services/<%= service._id %>/providers" method="get">
              <button class="btn btn-outline-primary">Book</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
