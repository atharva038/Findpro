      .quick-date-btn {
        border-radius: 20px;
        padding: 0.4rem 1rem;
        font-size: 0.85rem;
        border: 1px solid #dee2e6;
        background: white;
        transition: all 0.2s ease;
      }

      .quick-date-btn:hover {
        background: #667eea;
        border-color: #667eea;
        color: white;
        transform: translateY(-1px);
      }

      .quick-date-btn.active {
        background: #667eea;
        border-color: #667eea;
        color: white;
      }

      /* Form Card Enhancement */
      .card {
        border-radius: 1rem;
        transition: all 0.3s ease;
      }

      .card:hover {
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1) !important;
      }

      /* Date Input Specific Styling */
      input[type="date"] {
        position: relative;
        cursor: pointer;
      }

      input[type="date"]::-webkit-calendar-picker-indicator {
        opacity: 0;
        position: absolute;
        right: 0;
        top: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
      }

      /* Select Dropdown Enhancement */
      .form-select {
        cursor: pointer;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23667eea' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m1 6 7 7 7-7'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 1rem center;
        background-size: 16px 12px;
      }

      /* Provider Cards */
      .provider-card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        margin-bottom: 0.75rem;
      }

      .provider-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1) !important;
      }

      .card-body {
        padding: 1.5rem 1.75rem;
      }

      .provider-image-wrapper {
        height: 220px;
        overflow: hidden;
        position: relative;
      }

      .provider-image-wrapper::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 50%;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.3), transparent);
        z-index: 1;
      }

      .provider-image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease-out;
      }

      .provider-card:hover .provider-image-wrapper img {
        transform: scale(1.05);
      }

      .provider-details {
        margin-top: 1rem;
      }

      .provider-detail {
        margin-bottom: 1.25rem !important;
        padding-left: 0.25rem;
      }

      .provider-detail:last-child {
        margin-bottom: 0.5rem !important;
      }

      .provider-detail small {
        margin-bottom: 0.25rem;
        display: block;
      }

      .provider-detail .fw-medium {
        padding-right: 0.25rem;
        line-height: 1.4;
        word-break: break-word;
      }

      .icon-wrapper {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        background-color: #f0f4ff !important;
        margin-right: 1rem !important;
      }

      .card-title {
        margin-bottom: 1.25rem !important;
        padding: 0 0.5rem;
      }

      .card-footer {
