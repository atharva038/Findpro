<% layout("/layouts/boilerplate.ejs") %>

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-2 bg-dark text-light vh-100 p-4">
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link text-light" href="#">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-light" href="/dashboard/registerService"
            >Register for new Service</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link text-light" href="#">Bookings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-light" href="#">Settings</a>
        </li>
      </ul>
    </div>

    <!-- Main Content Area -->
    <div class="col-md-10">
      <div class="row mt-4">
        <!-- Greeting and Overview -->
        <div class="col-md-12">
          <h1>Welcome, <%= currUser.name %></h1>
          <p>Here is your activity overview for the week:</p>
        </div>

        <!-- Stats Section -->
        <div class="col-md-4">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title">Total Bookings</h5>
              <p class="card-text">45</p>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title">Ongoing Services</h5>
              <p class="card-text">8</p>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title">Average Rating</h5>
              <p class="card-text">4.5/5</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Bookings Section -->
      <div class="row mt-5">
        <div class="col-md-12">
          <h2>Recent Bookings</h2>
          <div class="table-responsive">
            <table class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Service</th>
                  <th>Date</th>
                  <th>Client Name</th>
                  <th>Status</th>
                </tr>
              </thead>

              <tbody>
                <% bookings.forEach((booking) => { %>
                <tr>
                  <td>
                    <%= (booking.service && booking.service.name) ?
                    booking.service.name : 'N/A' %>
                  </td>
                  <td>
                    <%= booking.bookingDate ? new Date(booking.bookingDate).toLocaleString() :
                    'N/A' %>
                  </td>
                  <td>
                    <%= (booking.customer && booking.customer.name) ?
                    booking.customer.name : 'N/A' %>
                  </td>
                  <td>
                    <span
                      class="badge bg-<%= booking.status === 'Pending' ? 'warning' : 'success' %>"
                    >
                      <%= booking.status %>
                    </span>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
