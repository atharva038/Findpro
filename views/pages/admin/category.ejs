<div class="container mt-5">
    <h2>All Categories</h2>
    <a href="/admin/addCategory" class="btn btn-success mb-3">Add Category</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Image URL</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(cat=> { %>
                <tr>
                    <td>
                        <%= cat.name %>
                    </td>
                    <td>
                        <%= cat.description %>
                    </td>
                    <td>
                        <%= cat.image %>
                    </td>
                    <td>
                        <a href="/admin/category/edit/<%= cat._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/admin/category/delete/<%= cat._id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>