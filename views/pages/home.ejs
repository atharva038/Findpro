<% layout("/layouts/boilerplate.ejs") %>

<style>
  /* Custom Styles */
  .hero-section {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    padding: 3rem 0;
    border-radius: 0 0 20px 20px;
    margin-bottom: 3rem;
  }

  .heading-homepage {
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 1rem;
    font-size: 2.5rem;
  }

  .service-card-homepage {
    border: none;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    height: 100%;
  }

  .service-card-homepage:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
  }

  .service-card-homepage .card-img-top {
    height: 180px;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .service-card-homepage:hover .card-img-top {
    transform: scale(1.05);
  }

  .card-body-homepage {
    padding: 1.5rem;
  }

  .card-title-homepage {
    color: #2c3e50;
    font-weight: 600;
    font-size: 1.2rem;
  }

  .card-text-homepage {
    color: #7f8c8d;
    font-size: 0.95rem;
  }

  .service-link-homepage {
    text-decoration: none;
  }

  .service-link-homepage:hover {
    text-decoration: none;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .heading-homepage {
      font-size: 2rem;
    }

    .service-card-homepage .card-img-top {
      height: 150px;
    }
  }
</style>

<!-- Hero Section -->
<div class="hero-section">
  <div class="container text-center">
    <h1 class="heading-homepage">Home services at your doorstep</h1>
    <p class="lead text-muted mb-5">
      Book professional services with just a few clicks
    </p>

    <div class="row g-4">
      <div class="col-lg-3 col-md-6">
        <a href="/services" class="service-link-homepage">
          <div class="card service-card-homepage">
            <img
              src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTINLL7DXqLd10Fr8fvJaVk-1KOt1mxWBBIEw&s"
              class="card-img-top"
              alt="Gardening services"
            />
            <div class="card-body-homepage text-center">
              <h5 class="card-title-homepage">Gardening services</h5>
              <div class="btn btn-sm btn-outline-primary mt-2">Book Now</div>
            </div>
          </div>
        </a>
      </div>

      <div class="col-lg-3 col-md-6">
        <a href="/services" class="service-link-homepage">
          <div class="card service-card-homepage">
            <img
              src="https://www.usnews.com/dims4/USNEWS/be2ed29/2147483647/thumbnail/970x647/quality/85/?url=https%3A%2F%2Fwww.usnews.com%2Fcmsmedia%2F97%2Fa9%2F30d751a044c29bb00bead735dee8%2F211005-moving-company-stock-stock.jpg"
              class="card-img-top"
              alt="Moving services"
            />
            <div class="card-body-homepage text-center">
              <h5 class="card-title-homepage">Moving services</h5>
              <div class="btn btn-sm btn-outline-primary mt-2">Book Now</div>
            </div>
          </div>
        </a>
      </div>

      <div class="col-lg-3 col-md-6">
        <a href="/services" class="service-link-homepage">
          <div class="card service-card-homepage">
            <img
              src="https://tiimg.tistatic.com/fp/1/007/031/air-conditioner-repair-service-090.jpg"
              class="card-img-top"
              alt="AC & Appliance Repair"
            />
            <div class="card-body-homepage text-center">
              <h5 class="card-title-homepage">AC & Appliance Repair</h5>
              <div class="btn btn-sm btn-outline-primary mt-2">Book Now</div>
            </div>
          </div>
        </a>
      </div>

      <div class="col-lg-3 col-md-6">
        <a href="/services" class="service-link-homepage">
          <div class="card service-card-homepage">
            <img
              src="https://5.imimg.com/data5/SELLER/Default/2024/3/396137618/NQ/TG/BL/3747135/fungus-pest-control-services-500x500.jpeg"
              class="card-img-top"
              alt="Cleaning & Pest Control"
            />
            <div class="card-body-homepage text-center">
              <h5 class="card-title-homepage">Cleaning & Pest Control</h5>
              <div class="btn btn-sm btn-outline-primary mt-2">Book Now</div>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Featured Services Section -->
<div class="container mb-5">
  <div class="text-center mb-5">
    <h2 class="fw-bold">Featured Services</h2>
    <p class="text-muted">Our most popular home service solutions</p>
  </div>

  <div class="row g-4">
    <div class="col-md-6">
      <div class="card service-card-homepage h-100">
