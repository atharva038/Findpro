            <!-- Make sure this div is present in the DOM -->
            <div id="google_translate_element" style="display: none;"></div>

            <script type="text/javascript">
              function googleTranslateElementInit() {
                new google.translate.TranslateElement({
                  pageLanguage: 'en',
                  includedLanguages: 'en,hi,bn,gu,mr,ta,te,pa,ml,kn,ur,or,as,ne,sa,sd,ks,doi,mn,st,ma,bh',
                  layout: google.translate.TranslateElement.InlineLayout.SIMPLE,
                  autoDisplay: false,
                  gaTrack: false,
                  gaId: '',
                }, 'google_translate_element');

                // Hide the Google translate toolbar
                var bannerFrame = document.querySelector('.goog-te-banner-frame');
                if (bannerFrame) {
                  bannerFrame.style.display = 'none';
                }
              }
            </script>
            <script type="text/javascript"
              src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

            <!-- Load language switcher script after Google Translate -->
            <script src="/js/languageSwitcher.js"></script>
</body>

